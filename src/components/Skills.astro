---
import Container from './Container.astro'
import Title from './Title.astro'
---

<Container>
  <section id="skills" class="py-15">
    <Title 
      title="Minhas Skills"
      body="Tecnologias e ferramentas que utilizo para criar experiências incríveis"
    />
    
    <div class="grid md:grid-cols-3 gap-4">
      <!-- Frontend -->
      <div class="hover:border-teal-500 border border-zinc-800 rounded text-zinc-500 p-5 space-y-3">
        <p class="text-teal-500">// Frontend</p>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          React
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Next
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Tailwind CSS
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Astro
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Shadcn
        </div>
      </div>
      
      <!-- Backend -->
      <div class="hover:border-teal-500 border border-zinc-800 rounded text-zinc-500 p-5 space-y-3">
        <p class="text-teal-500">// Backend</p>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Node
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Express
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          PostgreSQL
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Neon
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Insomnia
        </div>
      </div>
      
      <!-- Ferramentas -->
      <div class="hover:border-teal-500 border border-zinc-800 rounded text-zinc-500 p-5 space-y-3">
        <p class="text-teal-500">// Ferramentas</p>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Git
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Figma
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          Docker
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          AWS
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-teal-500"></span>
          CI/CD
        </div>
      </div>
    </div>
  </section>
</Container>
